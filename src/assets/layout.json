{
  "medias": [
    {
      "label":  "Google Home Livingroom",
      "widget": "chromecast",
      "items": {
        "controls": "LivingRoom_GoogleHome_Control",
        "volume": "LivingRoom_GoogleHome_Volume",
        "app": "LivingRoom_GoogleHome_App",
        "duration": "LivingRoom_GoogleHome_Duration",
        "currentTime": "LivingRoom_GoogleHome_CurrentTime",
        "album": "LivingRoom_GoogleHome_AlbumName",
        "artist": "LivingRoom_GoogleHome_Artist",
        "title": "LivingRoom_GoogleHome_Title",
        "imageUrl": "LivingRoom_GoogleHome_ImageURL"
      }
    }
  ],
  "rooms": {
    "EntryHall": {
      "id": "EntryHall",
      "label": "Entry Hall",
      "icon": "corridor",
      "layout": {
        "areaA": [
          {
            "widget": "value",
            "item": "Beacon_Olivier",
            "config": {
              "label": "Olivier"
            }
          },
          {
            "widget": "value",
            "item": "Beacon_Tiffany",
            "config": {
              "label": "Tiffany"
            }
          }
        ],
        "areaB": [
          {
            "widget": "image",
            "config": {
              "url": "http://raspberrypi.local:8081/"
            }
          }
        ],
        "areaD": [
          {
            "widget": "button",
            "item": "LivingRoom_AllLights_OnOff",
            "config": {
              "label": "Turn all lights off",
              "value": "OFF",
              "icon": "fas fa-moon"
            }
          }
        ]
      }
    },
    "LivingRoom": {
      "id": "LivingRoom",
      "label": "Living room",
      "icon": "lounge",
      "layout": {
        "areaA": [
          {
            "widget": "value",
            "item": "LivingRoom_OpenSensor_OpenStatus",
            "config": {
              "icon": "fas fa-unlock-alt",
              "label": "Door",
              "style": {
                "border": "none"
              }
            }
          },
          {
            "widget": "switch",
            "item": "LivingRoom_SensorLightRule_OnOff",
            "config": {
              "label": "Light rule"
            }
          }
        ],
        "areaB": [
          {
            "widget": "value",
            "item": "LivingRoom_TemperatureHumidityAndPressureSensor_Temperature",
            "config": {
              "label": "Heat",
              "icon": "fas fa-thermometer-three-quarters",
              "postString": "°C",
              "filter": {
                "type": "number",
                "arg": "1.2-2"
              },
              "style": {
                "border": "none"
              }
            }
          },
          {
            "widget": "value",
            "item": "LivingRoom_TemperatureHumidityAndPressureSensor_Humidity",
            "config": {
              "label": "Humidity",
              "icon": "fas fa-tint",
              "postString": "%",
              "filter": {
                "type": "number",
                "arg": "1.0-0"
              },
              "style": {
                "border": "none"
              }
            }
          }
        ],
        "areaC": [
          {
            "widget": "label",
            "config": {
              "value": "Lights",
              "style": {
                "font-size": "1.2em"
              }
            }
          },
          {
            "widget": "light",
            "items": {
              "OnOff": "Hallway_Light_OnOff",
              "Color": "Hallway_Light_Color",
              "Brightness": "Hallway_Light_Brightness"
            },
            "config": {
              "label": "HallWay Light"
            }
          },
          {
            "widget": "light",
            "items": {
              "OnOff": "LivingRoom_MainLight_OnOff",
              "Color": "LivingRoom_MainLight_Color",
              "Brightness": "LivingRoom_MainLight_Brightness"
            },
            "config": {
              "label": "Ceiling"
            }
          },
          {
            "widget": "separator",
            "config": {
              "style": {
                "width": "35%",
                "margin-left": "auto",
                "margin-right": "auto"
              }
            }
          },
          {
            "widget": "button",
            "item": "LivingRoom_AllLights_OnOff",
            "config": {
              "label": "Turn all lights off",
              "value": "OFF",
              "icon": "fas fa-moon"
            }
          },
          {
            "widget": "button",
            "item": "LivingRoom_AllLights_OnOff",
            "config": {
              "label": "Turn all lights on",
              "value": "ON",
              "icon": "fas fa-sun"
            }
          }
        ],
        "areaD": [
          {
            "widget": "music-controls",
            "items": {
              "controls": "LivingRoom_GoogleHome_Control",
              "volume": "LivingRoom_GoogleHome_Volume",
              "duration": "LivingRoom_GoogleHome_Duration",
              "currentTime": "LivingRoom_GoogleHome_CurrentTime",
              "album": "LivingRoom_GoogleHome_AlbumName",
              "artist": "LivingRoom_GoogleHome_Artist",
              "title": "LivingRoom_GoogleHome_Title",
              "imageUrl": "LivingRoom_GoogleHome_ImageURL"
            },
            "config": {
              "open": true,
              "style": {
                "border": "none"
              }
            }
          }
        ]
      }
    },
    "Kitchen": {
      "id": "Kitchen",
      "label": "Kitchen",
      "icon": "kitchen",
      "layout": {
        "areaD": [
          {
            "widget": "button",
            "item": "LivingRoom_AllLights_OnOff",
            "config": {
              "label": "Turn all lights off",
              "value": "OFF",
              "icon": "fas fa-moon"
            }
          }
        ]
      }
    },
    "Bedroom": {
      "id": "Bedroom",
      "label": "Bedroom",
      "icon": "bedroom",
      "layout": {}
    },
    "Bathroom": {
      "id": "Bathroom",
      "label": "Bathroom & Toilets",
      "icon": "bathroom",
      "layout": {
        "areaA": [
          {
            "widget": "value",
            "item": "Bathroom_DoorSensor_OpenStatus",
            "config": {
              "icon": "fas fa-unlock-alt",
              "label": "Door",
              "style": {
                "border": "none"
              }
            }
          },
          {
            "widget": "switch",
            "item": "Bathroom_DoorRule_OpenStatus",
            "config": {
              "label": "Door alarm rule"
            }
          }
        ],
        "areaB": [
          {
            "widget": "value",
            "item": "BathRoom_TemperatureHumidityAndPressureSensor_Temperature",
            "config": {
              "label": "Heat",
              "icon": "fas fa-thermometer-three-quarters",
              "postString": "°C",
              "filter": {
                "type": "number",
                "arg": "1.2-2"
              },
              "style": {
                "border": "none"
              }
            }
          },
          {
            "widget": "value",
            "item": "BathRoom_TemperatureHumidityAndPressureSensor_Humidity",
            "config": {
              "label": "Humidity",
              "icon": "fas fa-tint",
              "postString": "%",
              "filter": {
                "type": "number",
                "arg": "1.0-0"
              },
              "style": {
                "border": "none"
              }
            }
          }
        ]
      }
    }
  }
}
